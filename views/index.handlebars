<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
    <h1 class="display-4">My Burger Joint!</h1>
    <p class="lead">Create your own burgers and eat them!</p>
  </div>                
</div>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/cat-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>


<form class="create-form">

  <div class="form-group">
    <label for="burger">Enter a new burger</label>
    <input type="text" id="new-burger" name="name">
  </div>

  <button type="submit">Burger Time!</button>
</form>