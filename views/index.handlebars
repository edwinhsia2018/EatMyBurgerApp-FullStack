<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
    <h1 class="display-4">My Burger Joint!</h1>
    <p class="lead">Create your own burgers and eat them!</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col s6">
      {{#each burgers}} {{#unless this.devoured}}
      <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
        <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
      </form>
      {{/unless}} {{/each}}
    </div>

    <div class="col s6">
      {{#each burgers}} {{#if this.devoured}}
      <div class='burgerEaten'>
        <div>
          {{this.burger_name}}
        </div>
      </div>
      {{/if}} {{/each}}
    </div>
  </div>
</div>

<form class="create-form" method="POST">

  <div class="form-group">
    <label for="burger">Enter a new burger</label>
    <input type="text" id="name" name="burger_name">
  </div>

  <button type="submit" class="addBurgerButton">Burger Time!</button>
</form>